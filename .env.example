# Puerto para el servidor
PORT=3000

# URL de la base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:contraseña@host:puerto/nombre_base_datos?sslmode=require

# Secreto para las sesiones (generar uno seguro para producción)
SESSION_SECRET=un_secreto_muy_seguro_para_sesiones

# Modo de operación (development o production)
NODE_ENV=development

# Tiempo de expiración de la sesión en milisegundos (30 días por defecto)
SESSION_MAX_AGE=2592000000

# URL pública de la aplicación (para enlaces en emails, etc.)
PUBLIC_URL=http://localhost:3000